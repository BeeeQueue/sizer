{
  "name": "@beequeue/sizer",
  "type": "module",
  "version": "1.0.0",
  "author": "BeeeQueue <adam@haglund.dev>",
  "license": "MIT",
  "packageManager": "pnpm@8.6.12",
  "engines": {
    "node": ">=18"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,json5,yaml,yml,css,scss,md}": [
      "prettier --write"
    ]
  },
  "files": [
    "dist"
  ],
  "bin": {
    "sizer": "dist/cli.js"
  },
  "pkg": {
    "outputPath": "dist-pkg",
    "scripts": "dist/**/*.js",
    "targets": [
      "node18-win-x64",
      "node18-linux-x64",
      "node18-macos-x64"
    ]
  },
  "scripts": {
    "build": "tsup && pnpm exec pkg package.json",
    "dev": "tsup --watch",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "prepare": "simple-git-hooks",
    "release": "pnpm build && pnpm changeset publish"
  },
  "devDependencies": {
    "@beequeue/eslint-plugin": "3.0.1",
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.2",
    "@tsconfig/node20": "20.1.1",
    "@tsconfig/strictest": "2.0.1",
    "@types/bytes": "3.1.1",
    "@types/node": "20.4.8",
    "bytes": "3.1.2",
    "commander": "11.0.0",
    "eslint": "8.46.0",
    "fast-glob": "3.3.1",
    "lint-staged": "13.2.3",
    "pkg": "5.8.1",
    "prettier": "3.0.1",
    "simple-git-hooks": "2.9.0",
    "tsup": "7.2.0",
    "typescript": "5.1.6"
  }
}
