{
  "name": "@beequeue/sizer",
  "version": "0.2.0",
  "author": "BeeeQueue <adam@haglund.dev>",
  "license": "MIT",
  "packageManager": "pnpm@7.9.0",
  "engines": {
    "node": ">=14"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,json5,yaml,yml,css,scss,md}": [
      "prettier --write"
    ]
  },
  "files": [
    "dist"
  ],
  "bin": {
    "sizer": "dist/cli.js"
  },
  "pkg": {
    "outputPath": "dist-pkg",
    "scripts": "dist/**/*.js",
    "targets": [
      "node14-win-x64",
      "node14-linux-x64",
      "node14-macos-x64"
    ]
  },
  "scripts": {
    "build": "tsup && pnpm pkg package.json",
    "dev": "tsup --watch",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "prepare": "simple-git-hooks",
    "release": "pnpm build && pnpm changeset publish"
  },
  "devDependencies": {
    "@beequeue/eslint-plugin": "0.7.0",
    "@changesets/changelog-github": "0.4.6",
    "@changesets/cli": "2.24.2",
    "@tsconfig/node16": "1.0.3",
    "@types/bytes": "3.1.1",
    "@types/node": "16.11.48",
    "bytes": "3.1.2",
    "commander": "9.4.0",
    "eslint": "8.22.0",
    "fast-glob": "3.2.11",
    "lint-staged": "12.5.0",
    "pkg": "5.8.0",
    "prettier": "2.7.1",
    "simple-git-hooks": "2.8.0",
    "tsup": "5.12.9",
    "typescript": "4.7.4"
  }
}
